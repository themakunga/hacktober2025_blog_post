# top-most EditorConfig file
root = true

# Default rules for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Rules for Markdown files
[*.{md,mkdn}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false 
# Often set to false for Markdown due to line break syntax
